	keywords = {AIM, Climate mitigation, Computable general equilibrium model, Integrated assessment model, Socioeconomic scenarios, SSPs},
	pages = {268--283},
	file = {ScienceDirect Full Text PDF:C\:\\Users\\gidden\\AppData\\Roaming\\Zotero\\Zotero\\Profiles\\g83pibmo.default\\zotero\\storage\\JRRVVHKC\\Fujimori et al. - 2017 - SSP3 AIM implementation of Shared Socioeconomic P.pdf:application/pdf;ScienceDirect Snapshot:C\:\\Users\\gidden\\AppData\\Roaming\\Zotero\\Zotero\\Profiles\\g83pibmo.default\\zotero\\storage\\2ZSQ7MS9\\S0959378016300838.html:text/html}
